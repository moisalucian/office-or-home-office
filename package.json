{
  "name": "office-or-homeoffice",
  "version": "1.0.210",
  "description": "Office or Remote status tracking app",
  "main": "electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/moisalucian/office-or-home-office.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently -k \"npm run dev --prefix react-ui\" \"npm run electron-dev\"",
    "electron-dev": "electron .",
    "version": "1.0.175",
    "build-react": "npm run build --prefix react-ui",
    "copy-react": "xcopy \"react-ui\\dist\" \"electron\\dist\" /E /I /Y",
    "clean-dist": "powershell -Command \"if (Test-Path 'electron\\dist\\assets') { Get-ChildItem 'electron\\dist\\assets\\index-*.js' -ErrorAction SilentlyContinue | Remove-Item -Force; Get-ChildItem 'electron\\dist\\assets\\index-*.css' -ErrorAction SilentlyContinue | Remove-Item -Force }\"",
    "prebuild": "npm run clean-dist",
    "build": "npm run build-react && npm run copy-react && electron-builder"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron-store": "^10.1.0",
    "extract-zip": "^2.0.1",
    "firebase": "^12.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.2",
    "electron-builder": "^26.0.12",
    "vite": "^7.0.6",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.office.homeoffice.app",
    "productName": "Office or Home Office",
    "files": [
      "electron/**",
      "!electron/dist/assets/index-*.js",
      "!electron/dist/assets/index-*.css",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/sounds",
        "to": "sounds",
        "filter": ["*.wav"]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "compression": "maximum",
    "win": {
      "target": "portable",
      "forceCodeSigning": false,
      "publish": {
        "provider": "github"
      }
    },
    "nsis": {
      "oneClick": false
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
